<div class="container">
  <div class="jumbotron">
    <center><h1>HAPPY VALENTINES DAY</h1></center>
  </div>
</div>

<div class="container">
  <% @users[0..-5].each_slice(6) do |u| %>
  <div class="row">
    <% u.each do |user| %>
    <div class="col-md-2">
      <%= link_to user_path(user) do %>
      <%= image_tag(user.image_url, class: 'roundy img-responsive border') %>
      <% end  %>
    </div>
    <% end  %>

  </div><br/>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <center>
      <% @users[-4..-1].each do |p|  %>
      <div class="col-md-3">
        <%= link_to user_path(p) do %>
        <%= image_tag(p.image_url, class: 'roundy img-responsive imagein') %>

        <% end %>
      </div>

      <% end %>
    </center>



  </div>
</div>
