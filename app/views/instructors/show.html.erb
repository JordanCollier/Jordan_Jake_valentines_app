<br/><br/>
<div class="container">\
  <div class="col-md-6">

    <%= form_for [@instructor, Message.new] do |f| %>

    <div class="form-group row">
    <%= f.label :title, :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
    <%= f.text_field :title %>
    </div>
    </div>

    <div class="form-group row">
    <%= f.label :note, :class => "control-label col-md-2" %>
    <div class="form-controls col-md-4">
    <%= f.text_field :note %>
    </div>
    </div>

    <div class="form-group row">
    <div class="col-md-offset-2 col-md-4">
    <%= f.submit %>
    <%= link_to 'Back', users_path, class: "btn btn-info" %>
    </div>
    </div>

    <% end %>
  </div>

  <div class="col-md-6">
    <table class="table table-striped border">
      <tr>
        <th>Title </th>
        <th>Note </th>
      </tr>

      <tbody>
        <% @instructor.messages.each do |message| %>
        <tr>
          <td><%= message.title %></td>
          <td><%= message.note %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
